{
  "name": "morcus-net",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "16.14.0"
  },
  "scripts": {
    "build": "npm run build-client -- --env production && npm run make-ls",
    "start": "node --max-old-space-size=460 -- node_modules/.bin/ts-node -P tsconfig.json -r tsconfig-paths/register src/start_server.ts",
    "download-ls": "curl https://raw.githubusercontent.com/nkprasad12/lexica/master/CTS_XML_TEI/perseus/pdllex/lat/ls/lat.ls.perseus-eng2.xml > ls.xml",
    "make-ls": "npm run download-ls && npm run ts-node src/scripts/process_ls.ts && rm ls.xml",
    "format": "npx prettier . --write && python -m black .",
    "format-check": "npx prettier . --check && python -m black . --check",
    "setup-alatius": "python src/scripts/alatius.py",
    "test": "npm run ts-tests && npm run py-tests",
    "ts-tests": "npx jest",
    "py-tests": "python -m unittest discover",
    "py-coverage": "python -m coverage run -m unittest discover && coverage xml --omit **/test_*.py -o coverage/coverage.xml",
    "ts-coverage": "npx jest --coverage",
    "coverage": "npm run ts-coverage && npm run py-coverage",
    "ts-node": "node --max-old-space-size=4096 -- node_modules/.bin/ts-node -P tsconfig.json -r tsconfig-paths/register --transpile-only",
    "pytype": "python -m pytype src/py src/scripts",
    "build-client": "npx webpack",
    "server-w": "npm run build-client && npm run ts-node src/start_server.ts",
    "server-p": "npm run ts-node src/web/nlp/processing_server.ts",
    "ts-driver": "npm run ts-node src/ts_driver.ts",
    "py-driver": "python -c \"import src.py.driver\"",
    "pre-commit": "npm run format && npm run test && npm run build-client && npm run pytype",
    "scale": "heroku ps:scale web=1 -a morcus-net",
    "unscale": "heroku ps:scale web=0 -a morcus-net"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nkprasad12/morcus-net.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nkprasad12/morcus-net/issues"
  },
  "homepage": "https://github.com/nkprasad12/morcus-net#readme",
  "dependencies": {
    "@fontsource/roboto": "^4.5.8",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.0",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-static-gzip": "^2.1.7",
    "fast-xml-parser": "^4.1.2",
    "socket.io": "^4.6.1",
    "ts-lib": "^0.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2"
  },
  "devDependencies": {
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@jest/globals": "^29.4.2",
    "@mui/icons-material": "^5.11.11",
    "@mui/material": "^5.11.12",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.4.0",
    "@types/node-cleanup": "^2.1.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/supertest": "^2.0.12",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "css-loader": "^6.7.3",
    "html-webpack-plugin": "^5.5.0",
    "install": "^0.13.0",
    "jest": "^29.4.2",
    "jest-environment-jsdom": "^29.4.3",
    "node-cleanup": "^2.1.2",
    "npm": "^9.6.0",
    "prettier": "2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.6.1",
    "supertest": "^6.3.3",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
